<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity3">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="200dp">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:src="@drawable/top_background3"
          android:scaleType="fitXY">
      </ImageView>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="20dp"
          android:textSize="25dp"
          android:text="Hii"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="50dp"
          android:textSize="25dp"
          android:text="Aarav yadav"/>



      <androidx.cardview.widget.CardView
         android:layout_width="60dp"
         android:layout_marginLeft="300dp"
         android:layout_marginTop="40dp"
         app:cardCornerRadius="50dp"
         android:layout_height="60dp">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:src="@drawable/profile"/>

     </androidx.cardview.widget.CardView>
  </FrameLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your first Symptom"
        android:textColor="#040303"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
          android:layout_marginHorizontal="10dp"  />

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
      app:cardCornerRadius="7dp"
      android:elevation="15dp"
    android:layout_height="40dp">
    <Spinner
        android:id="@+id/spinner1"
       android:background="#F3CFA2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Select your Second Symptom"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_marginHorizontal="10dp"  />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="7dp"
        android:elevation="15dp"
        android:layout_height="40dp">
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:background="#F3CFA2"
            android:layout_height="match_parent"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your Third Symptom"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"

        android:textSize="20dp"
        android:layout_marginHorizontal="10dp"  />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="7dp"
        android:elevation="15dp"
        android:layout_height="40dp">
        <Spinner
            android:id="@+id/spinner3"
            android:background="#F3CFA2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your Fourth Symptom/Optional"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_marginHorizontal="10dp"  />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="7dp"
        android:elevation="15dp"
        android:layout_height="40dp">
        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="match_parent"
            android:background="#F3CFA2"
            android:layout_height="match_parent"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#E18816"
        android:elevation="20dp"
        android:layout_marginTop="60dp">
      <TextView
          android:id="@+id/predict_Button"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="Predict"
          android:textAlignment="center"
          android:textSize="25dp"
          android:textStyle="bold"
          android:paddingVertical="6dp"/>
    </androidx.cardview.widget.CardView>



</LinearLayout>